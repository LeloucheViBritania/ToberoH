<!-- Testimonials Area Start -->
<section class="roberto-testimonials-area section-padding-100-0">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">

                <div class="testimonial-thumbnail owl-carousel mb-100">
                    <img src="/Content/img/bg-img/10.jpg" alt="">
                    <img src="/Content/img/bg-img/11.jpg" alt="">
                </div>

            </div>

            <div class="col-12 col-md-6">
                <!-- Section Heading -->
                <div class="section-heading">
                    <h6>Testimonials</h6>
                    <h2>Our Guests Love Us</h2>
                </div>
                <!-- Testimonial Slide -->
                <div class="testimonial-slides owl-carousel mb-100">
                    @{ int inscr = 0;}
                    @foreach (var testimonial in Model.Comments)
                    {
                        if (inscr < 4)
                        {
                            <div class="single-testimonial-slide">
                                <h5>“@testimonial.CMessage”</h5>
                                <div class="rating-title">

                                    <h6>@testimonial.NameUserComment<span>- CEO Deercreative</span></h6>
                                </div>
                            </div>
                        }
                        inscr++;
                    }
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Projects Area Start -->
<section class="roberto-project-area">
    <!-- Projects Slide -->
    <div class="projects-slides owl-carousel">
        <!-- Single Project Slide -->
        @foreach (var project in Model.Activities)
        {
            <div class="single-project-slide active bg-img" style="background-image: url(@project.ImageActivity);">
                <!-- Project Text -->
                <div class="project-content">
                    <div class="text">
                        <h6>@project.TypeActivity</h6>
                        <h5>@project.NameActivity</h5>
                    </div>
                </div>
                <!-- Hover Effects -->
                <div class="hover-effects">
                    <div class="text">
                        <h6>@project.TypeActivity</h6>
                        <h5>@project.NameActivity</h5>
                        <p>@project.CommentOnActivity</p>
                    </div>
                    <a href="#" class="btn project-btn">Discover Now <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                </div>
            </div>
        }


        
    </div>
</section>
<!-- Projects Area End -->
<!-- Blog Area Start -->
<section class="roberto-blog-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading text-center wow fadeInUp" data-wow-delay="100ms">
                    <h6>Our Blog</h6>
                    <h2>Latest News &amp; Event</h2>
                </div>
            </div>
        </div>
     
        <div class="row">
            <!-- Single Post Area -->
            @{ int insc = 0;}
            @foreach (var telIm in Model.Blogs)
            {
                if (insc <= 2)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="single-post-area mb-100 wow fadeInUp" data-wow-delay="300ms">
                            <a href="#" class="post-thumbnail"><img src="@telIm.Image" alt=""></a>
                            <!-- Post Meta -->
                            <div class="post-meta">
                                <a href="#" class="post-date">Jan 02, 2019</a>
                                <a href="#" class="post-catagory">@telIm.TypeEvent</a>
                            </div>
                            <!-- Post Title -->
                            <a href="#" class="post-title">Learn How To Motivate Yourself</a>
                            <p>@telIm.CommmentPhotoos</p>
                            <a href="index.html" class="btn continue-btn"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                        </div>
                    </div>
                }
                insc++;
            }
        </div>
    </div>
</section>
