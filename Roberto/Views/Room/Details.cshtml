@model Roberto.Models.BedRoom
@{
    ViewBag.Title = "Details";
}




<!-- Breadcrumb Area Start -->


<div class="breadcrumb-area bg-img bg-overlay jarallax" style=" background-image: url(/Content/img/bg-img/16.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-end">
            <div class="col-12">
                <div class="breadcrumb-content d-flex align-items-center justify-content-between pb-5">
                    <h2 class="room-title">@Html.DisplayFor(model=>model.NameBedRoom)</h2>
                    <h2 class="room-price">$@Html.DisplayFor(model => model.PiceBedRoom) <span>/ Per Night</span></h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->
<!-- Rooms Area Start -->
<div class="roberto-rooms-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <!-- Single Room Details Area -->

                <div class="single-room-details-area mb-50">
                    <!-- Room Thumbnail Slides -->
                    <div class="room-thumbnail-slides mb-50">
                        <div id="room-thumbnail--slide" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/img/bg-img/48.jpg" class="d-block w-100" alt="">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/img/bg-img/49.jpg" class="d-block w-100" alt="">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/img/bg-img/50.jpg" class="d-block w-100" alt="">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/img/bg-img/51.jpg" class="d-block w-100" alt="">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/img/bg-img/52.jpg" class="d-block w-100" alt="">
                                </div>
                            </div>

                            <ol class="carousel-indicators">
                                <li data-target="#room-thumbnail--slide" data-slide-to="0" class="active">
                                    <img src="~/Content/img/bg-img/48.jpg" class="d-block w-100" alt="">
                                </li>
                                <li data-target="#room-thumbnail--slide" data-slide-to="1">
                                    <img src="~/Content/img/bg-img/49.jpg" class="d-block w-100" alt="">
                                </li>
                                <li data-target="#room-thumbnail--slide" data-slide-to="2">
                                    <img src="~/Content/img/bg-img/50.jpg" class="d-block w-100" alt="">
                                </li>
                                <li data-target="#room-thumbnail--slide" data-slide-to="3">
                                    <img src="~/Content/img/bg-img/51.jpg" class="d-block w-100" alt="">
                                </li>
                                <li data-target="#room-thumbnail--slide" data-slide-to="4">
                                    <img src="~/Content/img/bg-img/52.jpg" class="d-block w-100" alt="">
                                </li>
                            </ol>
                        </div>
                    </div>


                    <!-- Room Features -->
                    <div class="room-features-area d-flex flex-wrap mb-50">
                        <h6>Size: <span>@Html.DisplayFor(model => model.SizeBedRoom) ft</span></h6>
                        <h6>Capacity: <span>Max persion @Html.DisplayFor(model => model.Capacité_Chambre)</span></h6>
                        @*<h6>Bed: <span>@Html.DisplayFor(model => model.FormeLit)</span></h6>*@
                        <h6>Services: <span>@Html.DisplayFor(model => model.Service) ...</span></h6>
                    </div>
                    <div class="room-features-area d-flex flex-wrap mb-50">
                        <h6>Disponible: <span style="color: aquamarine">@Html.DisplayFor(model => model.Disponible)</span></h6>
                        <h6>Nombre d'enfants: <span> @Html.DisplayFor(model => model.NumberChild)</span></h6>
                        <h6>Nombres d'adultes: <span>@Html.DisplayFor(model => model.NumberAdult)</span></h6>
                        <h6>Date Disponibilité: <span>@Html.DisplayFor(model => model.Date_Disponible)</span></h6>
                    </div>
                    <p>@Html.DisplayFor(model => model.Description)</p>

                </div>
                <!-- Room Service -->
                <div class="room-service mb-50">
                    <h4>Room Services</h4>

                    <ul>
                        <li><img src="~/Content/img/core-img/icon1.png" alt=""> Air Conditioning</li>
                        <li><img src="~/Content/img/core-img/icon2.png" alt=""> Free drinks</li>
                        <li><img src="~/Content/img/core-img/icon3.png" alt=""> Restaurant quality</li>
                        <li><img src="~/Content/img/core-img/icon4.png" alt=""> Cable TV</li>
                        <li><img src="~/Content/img/core-img/icon5.png" alt=""> Unlimited Wifi</li>
                        <li><img src="~/Content/img/core-img/icon6.png" alt=""> Service 24/24</li>
                    </ul>
                </div>
                <div class="col-12 col-lg-10">
                    <!-- Hotel Reservation Area -->
                    <div class="hotel-reservation--area mb-100">
                        <form action="#" method="post">
                            <button type="submit" class="btn roberto-btn w-100">Reserver Maintenant</button>
                        </form>
                        <p>NB: Une fois cliquer sur le bouton reserver votre reservation sera faite immédiatement !!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Call To Action Area Start -->
<section class="roberto-cta-area">
    <div class="container">
        <div class="cta-content bg-img bg-overlay jarallax" style=" background-image: url(~/Content/img/bg-img/1.jpg);">
            <div class="row align-items-center">
                <div class="col-12 col-md-7">
                    <div class="cta-text mb-50">
                        <h2>Contact us now!</h2>
                        <h6>Contact (+12) 345-678-9999 to book directly or for advice</h6>
                    </div>
                </div>
                <div class="col-12 col-md-5 text-right">
                    <a href="#" class="btn roberto-btn mb-50">Contact Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Call To Action Area End -->
<!-- Partner Area Start -->
<div class="partner-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="partner-logo-content d-flex align-items-center justify-content-between wow fadeInUp" data-wow-delay="300ms">
                    <!-- Single Partner Logo -->
                    <a href="#" class="partner-logo"><img src="~/Content/img/core-img/p1.png" alt=""></a>
                    <!-- Single Partner Logo -->
                    <a href="#" class="partner-logo"><img src="~/Content/img/core-img/p2.png" alt=""></a>
                    <!-- Single Partner Logo -->
                    <a href="#" class="partner-logo"><img src="~/Content/img/core-img/p3.png" alt=""></a>
                    <!-- Single Partner Logo -->
                    <a href="#" class="partner-logo"><img src="~/Content/img/core-img/p4.png" alt=""></a>
                    <!-- Single Partner Logo -->
                    <a href="#" class="partner-logo"><img src="~/Content/img/core-img/p5.png" alt=""></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Partner Area End -->
